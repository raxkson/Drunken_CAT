<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="et_thema" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <!-- non focused line color -->
        <item name="colorControlActivated">#AA2233</item>
        <!-- focused line color -->
        <item name="android:editTextColor">#000000</item>
        <!-- text color --> <item name="android:textColorHighlight">#BBBBFF</item>
        <!-- selected text color -->
        <item name="android:textColorHint">#555555</item>
        <!-- hint color -->
    </style>


</resources>